<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

	<TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:stretchColumns="0,1">
        <TableRow android:layout_width="match_parent" android:layout_height="wrap_content">
	        <Button android:id="@+id/atualizarTudoButton" android:text="@string/atualizar_tudo" android:layout_width="150dp" android:layout_height="wrap_content"/>
	        <Button android:id="@+id/fecharButton" android:text="@string/fechar" android:layout_width="150dp" android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
    
    <ProgressBar 
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/progress_bar"
        android:indeterminate="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="center_horizontal"/>
        
    <TextView
        android:text="@string/mascaras"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginTop="@dimen/component_margin"/>
    
    <TextView android:id="@+id/mascaras"  
        android:drawableRight="@drawable/bt_download_down"
        android:textAlignment="gravity"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/background_small"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginRight="@dimen/component_margin"
        android:paddingLeft="@dimen/component_margin"/>
    
    
    <TextView android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/apresentacoes"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginTop="@dimen/component_margin"/>
    
    <TextView android:id="@+id/apresentacoes"
        android:drawableRight="@drawable/bt_download_down"
        android:textAlignment="gravity"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:background="@drawable/background_small"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginRight="@dimen/component_margin"
        android:paddingLeft="@dimen/component_margin"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginRight="@dimen/component_margin"
        android:layout_marginTop="@dimen/component_margin"
        android:orientation="horizontal">
        <TextView android:layout_width="0dp"
            android:layout_weight="1"
	        android:gravity="left"
	        android:text="@string/artigos"
	        android:layout_height="wrap_content"/>
        <TextView android:id="@+id/faltam_artigos" 
            android:layout_width="wrap_content"
	        android:gravity="right"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
    
    <ListView android:id="@android:id/list" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/component_margin"
        android:layout_marginRight="@dimen/component_margin"
        android:layout_marginBottom="@dimen/component_margin"
        />
    
</LinearLayout>