<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="110dp" >
    
	<ImageButton
       android:id="@+id/id_layout_item_color_image_button"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:src="@drawable/e2_2775_nautico"
       android:scaleType="fitXY"
       android:padding="0dp"
	/>    
    
	<TextView
	        android:id="@+id/id_layout_item_color_textview_nome"
	        android:layout_width="fill_parent" 
	        android:layout_height="20dp" 
	        android:background="#AA000000"
	        android:textColor="#ffffffff"
	        android:gravity="center_horizontal"
	        android:layout_above="@+id/id_layout_item_color_textview_code"
	        android:text="Girafa" />
	
	<TextView
	        android:id="@+id/id_layout_item_color_textview_code"
	        android:layout_width="fill_parent" 
	        android:layout_height="20dp" 
	        android:background="#AA000000"
	        android:textColor="#ffffffff"
	        android:gravity="center_horizontal"
	        android:layout_alignBottom="@+id/id_layout_item_color_image_button"
	        android:text="2709" />

	
</RelativeLayout>
