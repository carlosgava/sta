<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="260dp"
    android:padding="5dp"
     >
    
	<ImageButton
       android:id="@+id/id_layout_item_compartilhado_image_button"
       android:layout_width="220dp"
       android:layout_height="260dp"
       android:src="@drawable/e2_2775_nautico"
       android:scaleType="fitXY"
       android:padding="0dp"
	/>    
	
	<ImageButton
	    android:id="@+id/id_layout_item_compartilhado_botao_excluir"
	    android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:src="@drawable/icon_delete_button"
	    android:scaleType="fitXY"
	    android:padding="0dp" 
	    android:layout_alignLeft="@+id/id_layout_item_compartilhado_image_button"
	    android:layout_alignTop="@+id/id_layout_item_compartilhado_image_button"
	    android:visibility="invisible"
	    />
    
	<TextView
	        android:id="@+id/id_layout_item_compartilhado_textview_name"
	        android:layout_width="220dp" 
	        android:layout_height="20dp" 
	        android:background="#AA000000"
	        android:textColor="#ffffffff"
	        android:gravity="center_horizontal"
	        android:layout_alignBottom="@+id/id_layout_item_compartilhado_image_button"
	        android:text="CT-1501" />

	
</RelativeLayout>
